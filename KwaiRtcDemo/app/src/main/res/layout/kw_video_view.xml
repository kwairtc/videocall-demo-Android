<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/showView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/cameraPlaceHolderLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="@dimen/ks_dp_80"
            android:layout_height="@dimen/ks_dp_80"
            android:background="@drawable/blue_oval_bg"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/placeHolderTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/ks_sp_20"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ks_dp_22"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ks_dp_5"
        android:layout_marginStart="@dimen/ks_dp_5"
        android:orientation="horizontal"
        android:background="@drawable/white_60_bg"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/micStateIcon"
            android:layout_width="@dimen/ks_dp_11"
            android:layout_height="@dimen/ks_dp_12"
            android:layout_marginStart="@dimen/ks_dp_5"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_mic_open_white"/>

        <TextView
            android:id="@+id/nickNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ks_dp_5"
            android:layout_marginEnd="@dimen/ks_dp_5"
            android:layout_gravity="center_vertical"
            android:text="xxx"
            android:textColor="@color/black_64"
            android:textSize="@dimen/ks_sp_12"/>

    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/placeHolderLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        
        <ImageView
            android:id="@+id/imageHolder"
            android:layout_width="@dimen/ks_dp_28"
            android:layout_height="@dimen/ks_dp_24"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_wait_enter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageHolder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ks_dp_8"
            android:textSize="@dimen/ks_sp_12"
            android:text="@string/ks_wait_enter"
            android:textColor="@color/black_20"/>
    </RelativeLayout>

</RelativeLayout>

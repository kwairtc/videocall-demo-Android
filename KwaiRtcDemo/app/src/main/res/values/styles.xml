<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Dialog 统一样式 -->
    <style name="KWCommonDialog" parent="android:style/Theme.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!--标题  -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--弹窗背景是否变暗-->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 全屏 -->
        <item name="android:windowFullscreen">false</item>
        <!-- 进入和退出的动画 -->
        <item name="android:windowAnimationStyle">@style/KWDialogOutAndInStyle</item>
        <item name="windowMinWidthMinor">100%</item>
    </style>

    <!-- Dialog 弹出离开动效 -->
    <style name="KWDialogOutAndInStyle">
        <item name="android:windowEnterAnimation">@anim/kw_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/kw_dialog_out_anim</item>
    </style>

    <style name="KWTextStyle">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">@dimen/ks_sp_12</item>
    </style>

    <!--自定义seekbarstyle-->
    <style name="CustomSeekbarStyle" >
        <item name="android:maxHeight">@dimen/ks_dp_6</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/colorPrimary</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:minHeight">@dimen/ks_dp_6</item>
        <item name="android:thumb">@drawable/ic_circle</item>
    </style>

</resources>